    <persistence-unit name="YourPersistenceUnitName" transaction-type="RESOURCE_LOCAL">
        <!-- List all your entity classes here -->
        <class>com.location.Entities.Pondicherry</class>
        <!-- Add database connection properties -->
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/pondicherry_locations" />
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="pgadmin" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>

</persistence>
